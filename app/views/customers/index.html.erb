<h1>Customers</h1>

 <%= link_to "New Customer",new_customer_path ,  {class:"btn btn-sm btn-dark",disable_with:"Loading.."}  %>

  <% if @customers.any? %>

  <table class="table table-striped table-bordered table-responsive-lg" style="margin-top:20px">

    <thead>
      <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>Activity type</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>  

    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.relationshipstart %></td>      
        <td><%= customer.activitytype %></td>
        <td><%= customer.infoemail %></td>     
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

  </table>

<% end %>



